  <script>
    function calcular() {
      const directos = parseInt(document.getElementById('directos').value);
      const referidos = parseInt(document.getElementById('referidos').value);
      document.getElementById('valDirectos').innerText = directos;
      document.getElementById('valReferidos').innerText = referidos;
      const ganancia = (directos * 50) + (directos * referidos * 10);
      document.getElementById('resultado').innerText = ganancia + '‚Ç¨';
    }
    calcular();

    function aceptarCookies() {
      const check = document.getElementById('cookieConsentCheck');
      if (check.checked) {
        document.getElementById('cookieBanner').classList.add('hidden');
        localStorage.setItem('cookiesAceptadas', 'true');
      } else {
        alert("Debes aceptar la pol√≠tica de cookies para continuar.");
      }
    }

    window.onload = function () {
      if (localStorage.getItem('cookiesAceptadas') === 'true') {
        document.getElementById('cookieBanner').classList.add('hidden');
      }
    };
  </script>

